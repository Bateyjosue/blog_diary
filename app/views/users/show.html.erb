<%# <h1 class="user-banner">Here is a specific user</h1> %>

<div class="user-detail">
    <%= render partial: "users/shared/user", locals: {user: @user} %>
  <p class="bio">
    <h6>Bio:</h6>
    <span>
      <%= @user.bio %>
    </span>
  </p>
  <ul class="user-detail__posts">
    <% @user.posts.each do |post| %>
      <li class="user-detail__posts_info">
        <h3> <a href= "/users/<%=@user.id  %>/posts/<%= post.id %>"><%= post.title%></a></h3>
        <p><%= post.text%></p>
        <p class="likes-comments"> 
          <span>Comments: <%= post.comments_counter%></span>
          <span>Likes: <%= post.likes_counter%></span> 
        </p>
      </li>
    <% end %>
    <a href="/users/<%= @user.id %>/posts" class="see-all">See all posts</a>
  </ul>
</div>